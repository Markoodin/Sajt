import React, { useState } from "react";
import { Card, CardContent } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Textarea } from "@/components/ui/textarea";

export default function BartenderAI() {
  const [ingredients, setIngredients] = useState("");
  const [results, setResults] = useState([]);

  const fetchCocktails = async () => {
    const response = await fetch("/api/cocktail-recommendations", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ ingredients: ingredients.split(",") }),
    });
    const data = await response.json();
    setResults(data.cocktails);
  };

  return (
    <div className="p-4">
      <h1 className="text-2xl font-bold mb-4">BartenderAI - Pametni Preporučivač Koktela</h1>
      <Card className="mb-4">
        <CardContent>
          <h2 className="text-xl font-semibold mb-2">Unesite Sastojke</h2>
          <p className="mb-2">Odvojite sastojke zarezima (npr. vodka, narandžin sok, grenadin).</p>
          <Textarea
            placeholder="Unesite sastojke ovde"
            value={ingredients}
            onChange={(e) => setIngredients(e.target.value)}
            className="mb-4"
          />
          <Button onClick={fetchCocktails} className="w-full">
            Pretraži Koktele
          </Button>
        </CardContent>
      </Card>

      {results.length > 0 && (
        <Card>
          <CardContent>
            <h2 className="text-xl font-semibold mb-4">Preporučeni Kokteli</h2>
            <ul>
              {results.map((cocktail, index) => (
                <li key={index} className="mb-4">
                  <h3 className="font-bold">{cocktail.name}</h3>
                  <p>{cocktail.description}</p>
                  <p className="italic">Sastojci: {cocktail.ingredients.join(", ")}</p>
                  <p>{cocktail.instructions}</p>
                </li>
              ))}
            </ul>
          </CardContent>
        </Card>
      )}
    </div>
  );
}
